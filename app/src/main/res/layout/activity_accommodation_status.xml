<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hostel"
    tools:context=".AccommodationStatusActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/app_bar_layout"
            android:id="@+id/accomodation_tool_bar">
        </include>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/set_profile_image"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/colorPrimary"
            android:src="@drawable/profile_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:layout_marginTop="90dp"
            android:layout_width="250dp"
            android:layout_height="250dp" />
        <TextView
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_below="@+id/set_profile_image"
            android:text="Full Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/roomDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullName"
            android:textAlignment="center"
            android:text="Room Description"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="invisible"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            />




        <TextView
            android:id="@+id/bedNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roomDescription"
            android:textAlignment="center"
            android:text="Bed Number"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:background="@drawable/edit_rounded"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="invisible"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            />




    </RelativeLayout>



</ScrollView>