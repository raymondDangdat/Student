<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hostel"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/edit_rounded"
        android:padding="8dp"
        android:inputType="phone"
        android:hint="Your phone number here e.g +23481000011"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_phone"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/verification_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/edit_rounded"
        android:padding="5dp"
        android:hint="Write verification code here"
        android:layout_below="@+id/phone_number_input"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_lock"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/send_verification_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_below="@+id/verification_phone_input"
        />


    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_below="@+id/send_verification_code_button"
        android:visibility="invisible"
        />



</RelativeLayout>